%html
	%head
		%meta{charset:"utf-8"}
		%meta{name:"viewport",content:"width=device-width,intial-scale=1.0"}
		%title {block:PostTitle}{PostTitle}:{/block:PostTitle}{Title}
		%link{rel:"alternate",type:"application/rss+xml",href:"{RSS}"}
		%link{rel:"stylesheet",href:"http://erikescobar.me/styles.css"}
	%body
		%header
			%h1 {Title}
		%div#main
			%div#post-text
				{block:Posts}
				{block:Text}
				{block:Title}
					%a{href:"{Permalink}"} {Title}
				{/block:Title}
				{Body}
				%small
					Tagged
					%ul
						%li
							{block:HasTags}
							{block:Tags}
							%a{href:"{TagURL}"} {Tag}
							{/block:Tags}
							{/block:HasTags}				
				{/block:Text}
				{/block:Posts}
				%small
					{PostType}

			%div#post-quote
				{block:Posts}
				%a{href:"{Permalink}"} {Quote}
				{block:Source}
				{Source}
				%small
					Tagged
					%ul
						%li
							{block:HasTags}
							{block:Tags}
							%a{href:"{TagURL}"} {Tag}
							{/block:Tags}
							{/block:HasTags}
				{/block:Source}
				{/block:Posts}
				%small
					{PostType}

			%div#post-link
				{block:Posts}
				{block:Link}
				%a{href:"{Permalink}"} {Name}
				%a{href:"{Permalink}"} {URL}
				{/block:Link}
				{/block:Posts}